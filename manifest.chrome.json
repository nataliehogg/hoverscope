{
  "manifest_version": 3,
  "name": "Hoverscope",
  "version": "1.5",
  "description": "Hover over telescope and satellite names on arXiv to see key specifications",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://raw.githubusercontent.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://arxiv.org/*",
        "https://www.arxiv.org/*",
        "https://astrochristian.github.io/*",
        "https://astrochristian.github.io/astro_ph_co/*",
        "https://benty-fields.com/*",
        "http://benty-fields.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["telescopes.json", "surveys.json", "simulations.json", "sams.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
